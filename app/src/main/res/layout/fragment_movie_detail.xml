<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detail_inner_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MovieDetailActivity$PlaceholderFragment" tools:ignore="MergeRootFrame" >

    <ScrollView
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:background="@color/highlight_color">
        <TextView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="@color/highlight_color"
            android:textSize="@dimen/title_font_size"
            android:textColor="@color/light_font_color"
            android:id="@+id/title_textView"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            >

        </TextView>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="30dp"
        android:background="@color/background_color"
        >

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="15dp"
            android:scrollbarStyle="outsideOverlay"
            android:id="@+id/movie_imageView"
            >

            <!--
            android:id="@+id/movie_detail_scrollview"
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/background_color"

                >

            </ImageView>
            -->

        </ImageView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:background="@color/background_color"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="8dp"
                android:scrollbars = "vertical"
                android:background="@color/background_color"
                android:textSize="@dimen/year_font_size"
                android:id="@+id/year_textView"
                android:textStyle="bold"
                >

            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:scrollbars = "vertical"
                android:background="@color/background_color"
                android:textSize="@dimen/duration_font_size"
                android:id="@+id/duration_textView"
                android:textStyle="bold"
                >

            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:scrollbars = "vertical"
                android:background="@color/background_color"
                android:textSize="@dimen/rating_font_size"
                android:id="@+id/rating_textView"
                >

            </TextView>

        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color"
        android:textSize="@dimen/synopsis_font_size"
        android:scrollbars = "vertical"
        android:id="@+id/synopsis_textView"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        >

    </TextView>
    </ScrollView>
</LinearLayout>
